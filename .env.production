# Production Environment Variables for Life Management App

# Database
MONGODB_URI=your_mongodb_connection_string_here
DB_NAME=life_management_prod

# Authentication
JWT_SECRET=your_super_secure_jwt_secret_32_characters_minimum
JWT_EXPIRES_IN=7d

# Server
NODE_ENV=production
PORT=5000

# Frontend URLs
REACT_APP_API_URL=https://your-app-name.vercel.app/api
REACT_APP_FRONTEND_URL=https://your-app-name.vercel.app

# Security
CORS_ORIGIN=https://your-app-name.vercel.app

# Optional: External Services
# EMAIL_SERVICE_API_KEY=your_email_service_key
# STRIPE_SECRET_KEY=your_stripe_key_for_payments
